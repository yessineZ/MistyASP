@model List<Catergory>
<partial name="_notifications" />
@if(TempData["success"]!=null) {
	<h1>@TempData["success"]</h1>
}




<div class="container">
	<div class="row pt-4 pb-2">
		<div class="col-4">
			<h2 class="text-primary">
				Catergory List
			</h2>
		</div>
		<div class="col-6" text-end>
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
			<i class="bi bi-search"></i> Create New Category
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Namee
			</th>

			<th>
				Display Order
			</th>

		</tr>
	</thead>

	<tbody>
		@foreach(var i in Model.OrderBy(u=>u.DisplayOrder)){
			<tr>
				<td>
					@i.Name 
				</td>

				<td>
					 @i.DisplayOrder
					 
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary mx-2"><i class="fa-sharp fa-thin fa-pen"></i>Edit</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger mx-2"><i class="fa-thin fa-trash"></i>Delete</a>
					</div>
				</td>

			</tr>
		}
		
	</tbody>
	




</table>