@model Game

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit game</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div asp-validation-summary="ModelOnly"></div>
        <div asp-validation-summary="None"></div>

        <div class="mb-3 row">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Author" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>



        <div class="mb-3 row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                <span asp-validation-for="Description" class="text-daner"></span>
            </div>
        </div>


        <div class="mb-3 row">
            <label asp-for="ISBN" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-daner"></span>
            </div>
        </div>



        <div class="mb-3 row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-daner"></span>
            </div>
        </div>




   


        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
            <a asp-controller="game" asp-action="Index" class="btn btn-secondary" style="width: 150px">
                Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial Title="_ValidationScriptsPartial" />
    }
}
